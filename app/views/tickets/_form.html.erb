
<%= form_for [:show, @ticket] do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name %><br />
  <%= f.label :last_name %>:
  <%= f.text_field :last_name %><br />
  <%= f.label :email_address %>
  <%= f.text_field :email_address %><br />
  <%= f.label :email_address_confirmation %>
  <%= f.text_field :email_address_confirmation %><br />
  <%= f.label :credit_card_number %>:
  <%= f.text_field :credit_card_number %><br />
  <%= f.label :credit_card_expiration_date, 'Expiration date' %><br />
  <%= f.date_select :credit_card_expiration_date, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :use_month_numbers => true %><br />
  <% if @show.movie.rating == "R" %>
    <%= f.label :age, "This movie is rated 'R'. Please provide your birthdate to purchase the ticket" %><br />
    <%= f.date_select :age, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :use_month_numbers => true %><br />
  <% end %>
  <%= f.submit "Buy the Movie Ticket" %>
<% end %>
